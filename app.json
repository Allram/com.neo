			"settings": [
				{
				    "id": "meter_report",
				    "type": "checkbox",
				    "label": {
					    "en": "Meter Report",
						"nl": "Meter Report"
				    },
				    "value": true,
				    "hint": {
					    "en": "This will Disable/Enable meter report measure data to controller.",
						"nl": "Dit zal meter rapportages inschakelen naar controller."
				    }
			    },
